@model List<Interfaz.Models.ViewModels.CoberturasViewModel>
@{
    ViewBag.Title = "Coberturas";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>@ViewBag.Title</h2>
@Html.ActionLink("Nuevo", "Nuevo", "Coberturas", new { }, new { @class = "btn btn-primary mb-2" })

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Fecha de modificación</th>
            <th scope="col">Modificar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
        <tr>
            <td>@cliente.ID</td>
            <td>@cliente.Descripcion</td>
            <td>@cliente.FechaModificacion</td>
            <td>
                @Html.ActionLink("Modificar", "Editar", "Coberturas", new { id = cliente.ID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
        }
    </tbody>
</table>
